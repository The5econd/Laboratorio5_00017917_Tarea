<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/new_window_pk_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/normal_padding"
                        android:paddingLeft="@dimen/normal_padding"
                        android:textSize="@dimen/normal_text"/>
                    <TextView
                        android:id="@+id/new_window_pk_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/normal_padding"
                        android:paddingLeft="@dimen/normal_padding"
                        android:textSize="@dimen/normal_text"/>
                    <TextView
                        android:id="@+id/new_window_pk_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/normal_padding"
                        android:paddingLeft="@dimen/normal_padding"
                        android:textSize="@dimen/normal_text"/>
                    <TextView
                        android:id="@+id/new_window_pk_height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/normal_padding"
                        android:paddingLeft="@dimen/normal_padding"
                        android:textSize="@dimen/normal_text"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/imagen_pokemon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Level 1 stats"
                        android:gravity="center"
                        android:padding="8dp"
                        android:textSize="18sp"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="SPD"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:textSize="@dimen/normal_text"
                            android:gravity="center"/>
                    <TextView
                            android:text="SDef"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:textSize="@dimen/normal_text"/>
                    <TextView
                            android:text="SAtk"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:textSize="@dimen/normal_text"
                            android:gravity="center"/>
                    <TextView
                            android:text="Def"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:textSize="@dimen/normal_text"
                            android:gravity="center"/>
                    <TextView
                            android:text="Atk"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:textSize="@dimen/normal_text"
                            android:gravity="center"/>
                    <TextView
                            android:text="HP"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:textSize="@dimen/normal_text"
                            android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/new_window_pk_speed"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:gravity="center"
                            android:textSize="@dimen/number_size"/>
                    <TextView
                            android:id="@+id/new_window_pk_specialDefense"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:gravity="center"
                            android:textSize="@dimen/number_size"/>
                    <TextView
                            android:id="@+id/new_window_pk_specialAtack"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:gravity="center"
                            android:textSize="@dimen/number_size"/>
                    <TextView
                            android:id="@+id/new_window_pk_defense"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:gravity="center"
                            android:textSize="@dimen/number_size"/>
                    <TextView
                            android:id="@+id/new_window_pk_atack"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:gravity="center"
                            android:textSize="@dimen/number_size"/>
                    <TextView
                            android:id="@+id/new_window_pk_hp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:gravity="center"
                            android:textSize="@dimen/number_size"/>
                </LinearLayout>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="@dimen/normal_text"
                        android:layout_gravity="center"
                        android:text="Moves that can be learned"/>

                <TextView
                        android:id="@+id/new_window_pk_abilities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/normal_text"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>